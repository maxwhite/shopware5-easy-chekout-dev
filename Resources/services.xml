<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="nets_checkout.checkout_service"
                 class="NetsCheckoutPayment\Components\NetsCheckoutService">
            <argument type="service" id="nets_checkout.checkout_api_service"/>
            <!-- <argument type="service" id="session"/> !-->
        </service>

        <service id="nets_checkout.checkout_api_service"
                 class="NetsCheckoutPayment\Components\Api\NetsCheckoutService">
            <argument type="service" id="nets_api_client"/>
        </service>

        <service id="nets_api_client"
                 class="NetsCheckoutPayment\Components\Api\Client">
        </service>

        <service id="nets_checkout_extend_order.subscriber.templates" class="NetsCheckoutPayment\Subscriber\Backend">
            <argument type="service" id="service_container" />
            <argument>%nets_checkout_payment.plugin_dir%</argument>
            <tag name="shopware.event_subscriber"/>
        </service>

    </services>
</container>