<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="nets_checkout.checkout_service"
                 class="NetsCheckout\Components\NetsCheckoutService">
            <argument type="service" id="nets_checkout.checkout_api_service"/>
        </service>

        <service id="nets_checkout.checkout_api_service"
                 class="NetsCheckout\Components\Api\NetsCheckoutService">
            <argument type="service" id="nets_api_client"/>
        </service>


        <service id="nets_api_client"
                 class="NetsCheckout\Components\Api\Client">
        </service>
    </services>
</container>